{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5", 
    "module": "commonjs",
    "lib": [
      "es5",
      "es6",
      "es2015",
      "es7",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020",
      "esnext",
      "es2015.core"
    ],
    "outDir": "./dist",
    "rootDir": "./src", 
    "strict": true,
    "rootDirs": [
      "./src"
    ],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "./test/**/*.ts",
    "jest.config.ts",
    "jest.setup.ts",
    "jest.config.js",
    "./db/*"
  ]
}